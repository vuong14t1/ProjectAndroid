<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background8"
    tools:context="com.example.mrpython.elsreen.MainActivity">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mr. Python"
        android:textColor="@color/color_name"
        android:textSize="@dimen/name_text_size_main"
        android:fontFamily="@font/playball_regular"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/lnGetName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:visibility="gone" >

        <EditText
            android:id="@+id/txtInputName"
            android:layout_width="@dimen/with_input_name"
            android:layout_height="wrap_content"
            android:hint="@string/enter_your_name"
            android:textColor="@color/white"
            android:textColorHint="@color/white"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="setName"
            android:text="@string/ok"
            android:background="@drawable/button_default"
            android:textColor="@color/white" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/level"
        android:textColor="@color/color_level"
        android:textSize="@dimen/level_text_size_main"
        android:fontFamily="@font/pacifico_regular"/>

    <TextView
        android:id="@+id/tvLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="@dimen/level_text_size_number"
        android:padding="@dimen/padding_number_level"
        android:textColor="@color/color_number_level"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mode:"
            android:textColor="#1ff50b"
            android:textSize="25sp"
            android:fontFamily="@font/playball_regular"
            android:layout_marginRight="20dp"/>
        <TextView
            android:id="@+id/tvMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All"
            android:textColor="#eded09"
            android:textSize="25sp"
            android:fontFamily="@font/playball_regular"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnStartLockScreen"
        android:layout_width="@dimen/with_btn_action"
        android:layout_height="wrap_content"
        android:onClick="toggleLockScreen"
        android:text="@string/start"
        android:paddingLeft="@dimen/padding_btn_action"
        android:paddingRight="@dimen/padding_btn_action"
        android:layout_marginBottom="@dimen/layout_margin_bottom_btn_action"
        android:background="@drawable/button_default"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/btnLearningMode"
        android:layout_width="@dimen/with_btn_action"
        android:layout_height="wrap_content"
        android:text="@string/learning_mode"
        android:paddingLeft="@dimen/padding_btn_action"
        android:paddingRight="@dimen/padding_btn_action"
        android:layout_marginBottom="@dimen/layout_margin_bottom_btn_action"
        android:background="@drawable/button_default"
        android:textColor="@color/white"/>
    <Button
        android:layout_width="@dimen/with_btn_action"
        android:layout_height="wrap_content"
        android:id="@+id/btnTopLevel"
        android:onClick="topPlayer"
        android:text="@string/top_level"
        android:paddingLeft="@dimen/padding_btn_action"
        android:paddingRight="@dimen/padding_btn_action"
        android:layout_marginBottom="@dimen/layout_margin_bottom_btn_action"
        android:background="@drawable/button_default"
        android:textColor="@color/white"/>
</LinearLayout>
